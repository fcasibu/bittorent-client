        "prettier": "^3.3.1",
        "rimraf": "^5.0.7",
        "tsx": "^4.14.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "bignum": "^0.13.1"
    },
    "engines": {
        "node": ">=22.2.0"
    }
}
